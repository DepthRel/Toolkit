<Window
    x:Class="Toolkit.UI.WPF.Controls.DialogBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Toolkit.UI.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Toolkit.UI.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="uc"
    Width="500"
    Height="350"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="WindowDragAndDrop"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <converters:DialogBoxButtonsToVisibilityConverter x:Key="DialogBoxButtonsToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="10" Background="{Binding ElementName=uc, Path=Background, Mode=OneWay}">
        <Grid.Effect>
            <DropShadowEffect
                BlurRadius="8"
                Direction="-90"
                RenderingBias="Quality"
                ShadowDepth="0"
                Color="{Binding ElementName=uc, Path=BorderBrush, Mode=TwoWay}" />
        </Grid.Effect>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="1.4*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="1.2*" />
            </Grid.RowDefinitions>

            <ContentControl
                Margin="{Binding ElementName=uc, Path=HeaderMargin, Mode=TwoWay}"
                HorizontalAlignment="{Binding ElementName=uc, Path=HeaderHorizontalAlignment, Mode=TwoWay}"
                VerticalAlignment="{Binding ElementName=uc, Path=HeaderVerticalAlignment, Mode=TwoWay}"
                Content="{Binding ElementName=uc, Path=Header, Mode=TwoWay}"
                FontSize="28"
                Foreground="{Binding ElementName=uc, Path=HeaderForeground, Mode=OneWay}" />

            <Separator
                Grid.Row="1"
                Height="0.5"
                Margin="20,0" />

            <ContentControl
                Grid.Row="2"
                Margin="{Binding ElementName=uc, Path=ContentMargin, Mode=TwoWay}"
                HorizontalAlignment="{Binding ElementName=uc, Path=ContentHorizontalAlignment, Mode=TwoWay}"
                VerticalAlignment="{Binding ElementName=uc, Path=ContentVerticalAlignment, Mode=TwoWay}"
                Content="{Binding ElementName=uc, Path=Content, Mode=TwoWay}"
                Foreground="{Binding ElementName=uc, Path=ContentForeground, Mode=OneWay}" />

            <Grid Grid.Row="3" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Close button  -->
                <Button
                    Width="{Binding ElementName=uc, Path=ButtonsWidth, Mode=TwoWay}"
                    Height="{Binding ElementName=uc, Path=ButtonsHeight, Mode=TwoWay}"
                    Margin="{Binding ElementName=uc, Path=ButtonsMargin, Mode=TwoWay}"
                    Background="{Binding ElementName=uc, Path=ButtonsBackground, Mode=OneWay}"
                    Click="DialogClose"
                    FontFamily="{Binding ElementName=uc, Path=ButtonsFontFamily, Mode=TwoWay}"
                    FontSize="{Binding ElementName=uc, Path=ButtonsFontSize, Mode=TwoWay}"
                    Foreground="{Binding ElementName=uc, Path=ButtonsForeground, Mode=OneWay}"
                    IsCancel="True"
                    Visibility="{Binding ElementName=uc, Path=ButtonsConfiguration, Mode=TwoWay, Converter={StaticResource DialogBoxButtonsToVisibilityConverter}, ConverterParameter=Close}">
                    <ContentControl Content="{Binding ElementName=uc, Path=CloseButtonContent, Mode=TwoWay}" />
                </Button>

                <!--  Secondary button  -->
                <Button
                    Grid.Column="1"
                    Width="{Binding ElementName=uc, Path=ButtonsWidth, Mode=TwoWay}"
                    Height="{Binding ElementName=uc, Path=ButtonsHeight, Mode=TwoWay}"
                    Margin="{Binding ElementName=uc, Path=ButtonsMargin, Mode=TwoWay}"
                    Background="{Binding ElementName=uc, Path=ButtonsBackground, Mode=OneWay}"
                    Click="Select"
                    FontFamily="{Binding ElementName=uc, Path=ButtonsFontFamily, Mode=TwoWay}"
                    FontSize="{Binding ElementName=uc, Path=ButtonsFontSize, Mode=TwoWay}"
                    Foreground="{Binding ElementName=uc, Path=ButtonsForeground, Mode=OneWay}"
                    Tag="Secondary"
                    Visibility="{Binding ElementName=uc, Path=ButtonsConfiguration, Mode=TwoWay, Converter={StaticResource DialogBoxButtonsToVisibilityConverter}, ConverterParameter=Secondary}">
                    <ContentControl Content="{Binding ElementName=uc, Path=SecondaryButtonContent, Mode=TwoWay}" />
                </Button>

                <!--  Primary button  -->
                <Button
                    Grid.Column="2"
                    Width="{Binding ElementName=uc, Path=ButtonsWidth, Mode=TwoWay}"
                    Height="{Binding ElementName=uc, Path=ButtonsHeight, Mode=TwoWay}"
                    Margin="{Binding ElementName=uc, Path=ButtonsMargin, Mode=TwoWay}"
                    Background="{Binding ElementName=uc, Path=ButtonsBackground, Mode=OneWay}"
                    Click="Select"
                    FontFamily="{Binding ElementName=uc, Path=ButtonsFontFamily, Mode=TwoWay}"
                    FontSize="{Binding ElementName=uc, Path=ButtonsFontSize, Mode=TwoWay}"
                    Foreground="{Binding ElementName=uc, Path=ButtonsForeground, Mode=OneWay}"
                    IsDefault="True"
                    Tag="Primary"
                    Visibility="{Binding ElementName=uc, Path=ButtonsConfiguration, Mode=TwoWay, Converter={StaticResource DialogBoxButtonsToVisibilityConverter}, ConverterParameter=Primary}">
                    <ContentControl Content="{Binding ElementName=uc, Path=PrimaryButtonContent, Mode=TwoWay}" />
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
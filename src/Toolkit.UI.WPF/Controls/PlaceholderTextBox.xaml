<UserControl
    x:Class="Toolkit.UI.WPF.Controls.PlaceholderTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Toolkit.UI.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="uc"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid
        Width="{Binding ElementName=uc, Path=Width, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
        Height="{Binding ElementName=uc, Path=Height, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
        Background="{Binding ElementName=uc, Path=Background, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox
            Name="TextBoxControl"
            Padding="{Binding ElementName=uc, Path=Padding, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            HorizontalContentAlignment="{Binding ElementName=uc, Path=HorizontalContentAlignment, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            VerticalContentAlignment="{Binding ElementName=uc, Path=VerticalContentAlignment, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            AcceptsReturn="{Binding ElementName=uc, Path=AcceptsReturn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Background="{Binding ElementName=uc, Path=Background, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            BorderThickness="0"
            CaretBrush="{Binding ElementName=uc, Path=CaretBrush, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Foreground="{Binding ElementName=uc, Path=Foreground, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            GotFocus="ControlGotFocus"
            IsReadOnly="{Binding ElementName=uc, Path=IsReadOnly, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Loaded="TextBoxLoaded"
            LostFocus="ControlLostFocus"
            MaxLength="{Binding ElementName=uc, Path=MaxLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SpellCheck.IsEnabled="{Binding ElementName=uc, Path=SpellCheckEnable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Separator
            Grid.Column="1"
            Width="35"
            Height="0.6"
            Background="Gray"
            Visibility="{Binding ElementName=uc, Path=ClearButtonVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <Separator.LayoutTransform>
                <RotateTransform Angle="90" />
            </Separator.LayoutTransform>
        </Separator>

        <Button
            Grid.Column="2"
            Width="30"
            Background="{Binding ElementName=uc, Path=Background, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            BorderThickness="0"
            Click="ClearText"
            IsEnabled="{Binding ElementName=uc, Path=ClearButtonEnable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Visibility="{Binding ElementName=uc, Path=ClearButtonVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <Grid>
                <Separator
                    Width="20"
                    Height="0.8"
                    Background="{Binding ElementName=uc, Path=ClearButtonForeground, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <Separator.LayoutTransform>
                        <RotateTransform Angle="45" />
                    </Separator.LayoutTransform>
                </Separator>
                <Separator
                    Width="20"
                    Height="0.8"
                    Background="{Binding ElementName=uc, Path=ClearButtonForeground, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <Separator.LayoutTransform>
                        <RotateTransform Angle="135" />
                    </Separator.LayoutTransform>
                </Separator>
            </Grid>
        </Button>

    </Grid>
</UserControl>